# RankSmart 2.0 - Environment Variables
# Web-based Architecture (GitHub Pages + Vercel + Supabase)

# ===================================
# REQUIRED API Keys
# ===================================

# Google Gemini API Key (for AI content analysis & generation)
# Get yours at: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# Firecrawl API Key (for web scraping)
# Get yours at: https://firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ===================================
# Database (Supabase)
# ===================================

# Supabase Project URL
# Format: https://xxxxx.supabase.co
SUPABASE_URL=your_supabase_url_here

# Supabase Anon/Public Key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side operations)
# ⚠️ NEVER expose this to frontend!
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ===================================
# Optional API Keys
# ===================================

# Flux AI (for image generation)
# Get yours at: https://fal.ai/
FAL_API_KEY=your_fal_api_key_here

# OpenAI (alternative for image generation)
OPENAI_API_KEY=your_openai_api_key_here

# ===================================
# Application Settings
# ===================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL (for CORS and redirects)
APP_URL=http://localhost:3000
# Production: https://ranksmart.io

# API Base URL (Vercel serverless functions)
API_URL=http://localhost:3000/api
# Production: https://ranksmart.io/api

# Secret key for JWT signing
JWT_SECRET=your_jwt_secret_here_change_in_production_min_32_chars

# Session expiry (in seconds)
SESSION_EXPIRY=86400

# ===================================
# Integration Settings
# ===================================

# Slack Webhook URL (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Webhook URL (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# WordPress API credentials (for auto-publishing)
WORDPRESS_SITE_URL=https://yoursite.com
WORDPRESS_USERNAME=your_username
WORDPRESS_APP_PASSWORD=your_app_password

# Webflow API Token
# Get yours at: https://webflow.com/dashboard/account/integrations
WEBFLOW_API_TOKEN=your_webflow_api_token_here

# ===================================
# Payment Processing (Stripe)
# ===================================

# Stripe Publishable Key (safe to expose to frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Stripe Secret Key (server-side only)
STRIPE_SECRET_KEY=sk_test_xxxxx

# Stripe Webhook Secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ===================================
# Feature Flags
# ===================================

# Enable/disable features
ENABLE_IMAGE_GENERATION=true
ENABLE_AUTO_FIX=true
ENABLE_BULK_SCANNING=true
ENABLE_API_ACCESS=true
ENABLE_TEAM_FEATURES=true
ENABLE_WHITE_LABEL=false

# ===================================
# Rate Limiting
# ===================================

# Max requests per minute (per user)
RATE_LIMIT_PER_MINUTE=60

# Max concurrent scans (per user)
MAX_CONCURRENT_SCANS=5

# Max pages per bulk scan
MAX_BULK_PAGES=100

# ===================================
# Plan Limits
# ===================================

# Starter Plan
STARTER_SCANS_PER_MONTH=50
STARTER_PRICE=49

# Professional Plan
PRO_SCANS_PER_MONTH=200
PRO_PRICE=149

# Enterprise Plan
ENTERPRISE_SCANS_PER_MONTH=999999
ENTERPRISE_PRICE=499

# ===================================
# Email Settings (Optional)
# ===================================

# SMTP settings for transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# From email address
EMAIL_FROM=noreply@ranksmart.io

# ===================================
# Monitoring & Analytics
# ===================================

# Sentry DSN (for error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Google Analytics ID
GA_TRACKING_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
VERCEL_ANALYTICS_ID=auto

# ===================================
# Logging
# ===================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (verbose logging)
DEBUG=false

# ===================================
# Redis (Optional - for caching)
# ===================================

# Redis URL (for caching and rate limiting)
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Redis password
REDIS_PASSWORD=

# ===================================
# Development Settings
# ===================================

# Enable hot reload
HOT_RELOAD=true

# Enable source maps
SOURCE_MAPS=true

# Mock external APIs (for testing)
MOCK_APIS=false

# ===================================
# Security Settings
# ===================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://ranksmart.io

# Enable HTTPS redirect
FORCE_HTTPS=false

# Content Security Policy
CSP_ENABLED=true

# ===================================
# AI Model Settings
# ===================================

# Gemini model to use
GEMINI_MODEL=gemini-2.0-flash-exp

# Max tokens for AI responses
MAX_AI_TOKENS=8192

# AI temperature (0.0 - 1.0)
AI_TEMPERATURE=0.7

# ===================================
# Scraping Settings
# ===================================

# Firecrawl timeout (milliseconds)
FIRECRAWL_TIMEOUT=30000

# Max content length to analyze (characters)
MAX_CONTENT_LENGTH=50000

# User agent for scraping
USER_AGENT=RankSmart/2.0 (SEO Audit Bot)

# ===================================
# Notes
# ===================================

# 1. Never commit this file with real values
# 2. Use Vercel Environment Variables for production
# 3. Keep SUPABASE_SERVICE_KEY and JWT_SECRET secure
# 4. Rotate keys regularly
# 5. Use different keys for development and production
